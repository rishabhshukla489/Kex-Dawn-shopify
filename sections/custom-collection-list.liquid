{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .collection-card {
    position: relative;
    overflow: hidden;
    border-radius: 8px;
    text-align: center;
  }

  .collection-card__image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    z-index: 1;
  }

  .collection-card__content {
    position: relative;
    z-index: 2;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    height: 100%;
    padding: 20px;
  }

  .collection-card__title {
    font-size: 1.5rem;
    font-weight: bold;
    color: #fff;
  }

  .collection-card__button {
    margin-top: 10px;
    padding: 10px 15px;
    background-color: rgba(0, 0, 0, 0.6);
    color: #fff;
    border: none;
    cursor: pointer;
  }

  .top { align-items: flex-start; }
  .middle { align-items: center; }
  .bottom { align-items: flex-end; }
{%- endstyle -%}

<div class="color-{{ section.settings.color_scheme }} gradient">
  <div class="collection-list-wrapper page-width section-{{ section.id }}-padding">
    {%- if section.settings.title != blank -%}
      <h2 class="collection-list-title">{{ section.settings.title }}</h2>
    {%- endif -%}

    <div class="grid grid--{{ section.settings.columns_desktop }}-col-desktop grid--{{ section.settings.columns_mobile }}-col-tablet-down">
      {%- for block in section.blocks -%}
        {%- assign collection = block.settings.collection -%}
        <div class="collection-card">
          <img src="{{ collection.featured_image | default: 'placeholder.jpg' }}" class="collection-card__image" alt="{{ collection.title }}">
          <div class="collection-card__content {{ section.settings.title_position }}">
            <h3 class="collection-card__title">{{ collection.title }}</h3>
            <button class="collection-card__button">View Collection</button>
          </div>
        </div>
      {%- endfor -%}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Custom Collection List",
  "settings": [
    {
      "type": "inline_richtext",
      "id": "title",
      "default": "Our Collections",
      "label": "Title"
    },
    {
      "type": "select",
      "id": "title_position",
      "options": [
        { "value": "top", "label": "Top" },
        { "value": "middle", "label": "Middle" },
        { "value": "bottom", "label": "Bottom" }
      ],
      "default": "middle",
      "label": "Title Position"
    },
    {
      "type": "range",
      "id": "columns_desktop",
      "min": 1,
      "max": 6,
      "step": 1,
      "default": 3,
      "label": "Columns on Desktop"
    },
    {
      "type": "range",
      "id": "columns_mobile",
      "min": 1,
      "max": 3,
      "step": 1,
      "default": 1,
      "label": "Columns on Mobile"
    }
  ],
  "blocks": [
    {
      "type": "collection",
      "name": "Collection",
      "settings": [
        {
          "type": "collection",
          "id": "collection",
          "label": "Collection"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Custom Collection List",
      "blocks": [
        { "type": "collection" },
        { "type": "collection" },
        { "type": "collection" }
      ]
    }
  ]
}
{% endschema %}
