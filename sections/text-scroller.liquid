  <div class="scrolling-text color-{{ section.settings.color_scheme }}">
  <div>
    {{ section.settings.heading }}
  </div>
</div>

<style>
  .scrolling-text {
    overflow: hidden;
    width: 100%;
    white-space: nowrap;
    position: relative;
  }

  .scrolling-text div {
    display: inline-block;
    font-size: 42px;
    font-weight: 600;
    animation: scroll-left 10s linear infinite;
    text-transform: uppercase;
    white-space: nowrap;
  }

  .scrolling-text div::after {
    content: " New Collection New Collection New Collection New Collection";
  }

  @keyframes scroll-left {
    from {
      transform: translateX(100%);
    }
    to {
      transform: translateX(-100%);
    }
  }
</style>


{% schema %}
  {
    "name": "text-scoller",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label" : "Heading",
        "default" : "My Custom Heading"
      },
      {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "scheme-4"
    }
    ],
    "presets": [
      {
        "name": "text-scoller"
      }]
  }
{% endschema %}


    


