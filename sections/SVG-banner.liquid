<style>
  .custom-marquee {
    position: relative;
    width: 100vw;
    max-width: 100%;
    height: 60px;
    overflow-x: hidden;
    background:{{section.settings.colorBackground}}; 
    color:{{section.settings.colorText}}; 
    font-size: 42px;
    font-weight: 600;
    padding: 0;
    margin: 0;
  }
  .custom-marquee a {
    color:{{section.settings.colorText}}; 
    padding: 0;
    margin: 0;
  }
  .custom-marquee .track {
    position: absolute;
    white-space: nowrap;
    will-change: transform;
    animation: marquee 12s linear infinite;
    padding: 0;
    margin: 0;
  }
  .custom-marquee .content {
    display: inline-flex;
    align-items: center;
    margin-left: 4px;
    padding: 0;
    margin: 0;
  }
  .custom-marquee .content img {
    height: 40px; /* Adjust as needed */
    margin: 0 10px; /* Adjust as needed */
  }
  @keyframes marquee {
    from {
      transform: translateX(0);
    }
    to {
      transform: translateX(-20%);
    }
  }
</style>
<div class="custom-marquee color-{{ section.settings.color_scheme }} gradient" role="region" {{ block.shopify_attributes }}>
  {%- if section.settings.text != blank -%}
    {%- if section.settings.link != blank -%}
      <a href="{{ section.settings.link }}" class="">
    {%- endif -%}
    <div class="track">
      <span class="content marquee-text">{{ section.settings.text | raw }}</span>
      <span class="content marquee-text">{{ section.settings.text | raw }}</span>
      <span class="content marquee-text">{{ section.settings.text | raw }}</span>
      <span class="content marquee-text">{{ section.settings.text | raw }}</span>
      <span class="content marquee-text">{{ section.settings.text | raw }}</span>
      <span class="content marquee-text">{{ section.settings.text | raw }}</span>
      <span class="content marquee-text">{{ section.settings.text | raw }}</span>
      <span class="content marquee-text">{{ section.settings.text | raw }}</span>
      <span class="content marquee-text">{{ section.settings.text | raw }}</span>
      <span class="content marquee-text">{{ section.settings.text | raw }}</span>
      {%- if section.settings.link != blank -%}
        {% render 'icon-arrow' %}
      {%- endif -%}
    </div>
    {%- if section.settings.link != blank -%}
      </a>
    {%- endif -%}
  {%- endif -%}
</div>
<script>
document.addEventListener('DOMContentLoaded', function() {
  var marquees = document.getElementsByClassName("marquee-text");
  for (let i = 0; i < marquees.length; i++) {
    let str = marquees.item(i).innerHTML;
    let improvedText = str.replaceAll("|", " <img src='{{ section.settings.image | image_url }}' alt='Marquee Image'> ");
    marquees.item(i).innerHTML = improvedText;
  }
});
</script>
{% schema %}
{
  "name": "Marquee Announcement",
  "settings": [
    {
      "type": "richtext",
      "id": "text",
      "default": "<p>Welcome to our store | Check out our latest offers</p>",
      "label": "Add text to display"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "scheme-1"
    },
    {
      "type": "url",
      "id": "link",
      "label": "Link"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Marquee Image"
    }
  ],
  "presets": [
    {
      "name": "SVG banner"
    }
  ]
}
{% endschema %}