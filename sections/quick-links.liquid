{{ 'section-quick-links.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .quick-links__title {
    text-align: center;
    margin-bottom: 2rem;
  }

  .quick-links__subsection {
    margin-bottom: 2rem;
  }

  .quick-links__subsection-title {
    font-weight: bold;
    margin-bottom: 1rem;
  }

  .quick-links__link-list {
    list-style: none;
    padding: 0;
  }

  .quick-links__link-item {
    margin-bottom: 0.5rem;
  }

  .quick-links__link-item a {
    text-decoration: none;
    color: inherit;
  }

  .quick-links__link-item a:hover {
    text-decoration: underline;
  }
{%- endstyle -%}

<div class="quick-links section-{{ section.id }}-padding">
  <div class="page-width">
    <div class="quick-links__title">
      {{ section.settings.title }}
    </div>
    {%- for block in section.blocks -%}
      <div class="quick-links__subsection">
        <div class="quick-links__subsection-title">
          {{ block.settings.subsection_title }}
        </div>
        <ul class="quick-links__link-list">
          {%- for link in block.settings.links -%}
            <li class="quick-links__link-item">
              <a href="{{ link.url }}">{{ link.title }}</a>
            </li>
          {%- endfor -%}
        </ul>
      </div>
    {%- endfor -%}
  </div>
</div>

{% schema %}
{
  "name": "Quick Links",
  "settings": [
    {
      "type": "richtext",
      "id": "title",
      "label": "Title",
      "default": "<p><strong>Quick Links</strong></p>"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Bottom",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "subsection",
      "name": "Subsection",
      "settings": [
        {
          "type": "text",
          "id": "subsection_title",
          "label": "Subsection Title",
          "default": "Subsection"
        },
        {
          "type": "list",
          "id": "links",
          "label": "Links",
          "default": [],
          "item": {
            "type": "link_list",
            "label": "Link"
          }
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Quick Links",
      "blocks": [
        {
          "type": "subsection"
        },
        {
          "type": "subsection"
        },
        {
          "type": "subsection"
        }
      ]
    }
  ]
}
{% endschema %}
