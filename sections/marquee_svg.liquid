<style>
  .custom-marquee {
    position: relative;
    width: 100vw;
    max-width: 100%;
    height: 120px;
    overflow-x: hidden;
    background:{{section.settings.colorBackground}}; 
    color:{{section.settings.colorText}}; 
    font-size: 36px;
    font-weight: 600;
    padding: 0;
    margin: 0
  }
  .custom-marquee a {
    color:{{section.settings.colorText}}; 
    padding: 0;
    margin: 0
  }
  .custom-marquee .track {
      position: absolute;
      /* bottom: 6px; */
      white-space: nowrap;
      will-change: transform;
      animation: marquee 12s linear infinite;
      padding: 0;
      margin: 0;
  }
  .custom-marquee .content {
    margin-left: 4px;
    padding: 0;
    margin: 0;
  }
  
  @keyframes marquee {
    from {
      transform: translateX(0);
    }
    to {
      transform: translateX(-20%);
    }
  }
</style>
