  }

  .ai-bestseller-content-{{ ai_gen_id }}.active {
    display: block;
  }

  .ai-bestseller-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat({{ block.settings.products_per_row }}, 1fr);
    gap: 24px;
  }

