      {% if block.settings.subheading != blank %}
        <p class="ai-bestseller-subtitle-{{ ai_gen_id }}">{{ block.settings.subheading }}</p>
      {% endif %}
    </div>

    <div class="ai-bestseller-tabs-{{ ai_gen_id }}">
      {% if block.settings.show_all_tab %}
        <button class="ai-bestseller-tab-{{ ai_gen_id }} active" data-tab="all">
          {{ block.settings.all_tab_label }}
        </button>
      {% endif %}
      {% if block.settings.men_collection != blank %}
        <button class="ai-bestseller-tab-{{ ai_gen_id }} {% unless block.settings.show_all_tab %}active{% endunless %}" data-tab="men">
          {{ block.settings.men_tab_label }}
        </button>
      {% endif %}
      {% if block.settings.women_collection != blank %}
        <button class="ai-bestseller-tab-{{ ai_gen_id }}" data-tab="women">
          {{ block.settings.women_tab_label }}
        </button>
      {% endif %}
    </div>

    {% if block.settings.show_all_tab %}
      <div class="ai-bestseller-content-{{ ai_gen_id }} active" data-content="all">
        {% if block.settings.all_products != blank %}
          <div class="ai-bestseller-grid-{{ ai_gen_id }}">
            {% for product in block.settings.all_products limit: block.settings.products_to_show %}
              <div class="ai-bestseller-product-{{ ai_gen_id }}">
                <div class="ai-bestseller-product-image-{{ ai_gen_id }}">
                  {% if product.featured_image %}
                    <img
                      src="{{ product.featured_image | image_url: width: 600 }}"
                      alt="{{ product.featured_image.alt | escape }}"
                      loading="lazy"
                      width="600"
                      height="600"
                    >
                  {% else %}
                    <div class="ai-bestseller-product-image-placeholder-{{ ai_gen_id }}">
                      {{ 'product-1' | placeholder_svg_tag }}
                    </div>
                  {% endif %}
                  {% if block.settings.show_badge %}
                    <span class="ai-bestseller-badge-{{ ai_gen_id }}">{{ block.settings.badge_text }}</span>
                  {% endif %}
                </div>
                <div class="ai-bestseller-product-info-{{ ai_gen_id }}">
                  <h3 class="ai-bestseller-product-title-{{ ai_gen_id }}">
                    <a href="{{ product.url }}">{{ product.title }}</a>
                  </h3>
                  <div class="ai-bestseller-product-price-{{ ai_gen_id }}">
                    {% if product.compare_at_price > product.price %}
                      <span class="compare-price">{{ product.compare_at_price | money }}</span>
                    {% endif %}
                    <span>{{ product.price | money }}</span>
                  </div>
                  <a href="{{ product.url }}" class="ai-bestseller-product-button-{{ ai_gen_id }}">
                    {{ block.settings.button_text }}
                  </a>
                </div>
              </div>
            {% endfor %}
          </div>
        {% else %}
          <div class="ai-bestseller-empty-{{ ai_gen_id }}">
            Select products to display in the "All Products" section
          </div>
        {% endif %}
      </div>
    {% endif %}

    {% if block.settings.men_collection != blank %}
      <div class="ai-bestseller-content-{{ ai_gen_id }} {% if block.settings.show_all_tab == false %}active{% endif %}" data-content="men">
        <div class="ai-bestseller-grid-{{ ai_gen_id }}">
          {% for product in block.settings.men_collection.products limit: block.settings.products_to_show %}
