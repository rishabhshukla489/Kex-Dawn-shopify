    color: inherit;
    text-decoration: none;
  }

  .ai-bestseller-product-title-{{ ai_gen_id }} a:hover {
    color: {{ block.settings.tab_active_bg_color }};
  }

  .ai-bestseller-product-price-{{ ai_gen_id }} {
    font-size: 18px;
    font-weight: 700;
    color: {{ block.settings.card_price_color }};
    margin-bottom: 12px;
  }

