    }
  }
{% endstyle %}

<jockey-hero-{{ ai_gen_id }} class="ai-jockey-hero-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-jockey-hero-container-{{ ai_gen_id }}">
    {% if block.settings.heading != blank %}
      <h2 class="ai-jockey-hero-heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
    {% endif %}

    <div class="ai-jockey-hero-toggle-{{ ai_gen_id }}">
      <button
        class="ai-jockey-hero-toggle-btn-{{ ai_gen_id }} active"
        data-category="men"
        aria-label="Show men's products"
      >
        {{ block.settings.men_label }}
      </button>
      <button
        class="ai-jockey-hero-toggle-btn-{{ ai_gen_id }}"
        data-category="women"
        aria-label="Show women's products"
      >
        {{ block.settings.women_label }}
      </button>
    </div>

    <div class="ai-jockey-hero-carousel-wrapper-{{ ai_gen_id }}">
      <button
        class="ai-jockey-hero-nav-btn-{{ ai_gen_id }} prev"
        aria-label="Previous products"
      >
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <polyline points="15 18 9 12 15 6"></polyline>
        </svg>
      </button>

      <div class="ai-jockey-hero-carousel-{{ ai_gen_id }} ai-jockey-hero-category-{{ ai_gen_id }} active" data-category="men">
        {% if block.settings.men_products != blank %}
          {% for product in block.settings.men_products %}
            <div class="ai-jockey-hero-product-card-{{ ai_gen_id }}">
              <div class="ai-jockey-hero-product-image-{{ ai_gen_id }}">
                {% if product.featured_image %}
                  <img
                    src="{{ product.featured_image | image_url: width: 400 }}"
                    alt="{{ product.featured_image.alt | escape }}"
                    loading="lazy"
                    width="400"
                    height="400"
                  >
                {% else %}
                  <div class="ai-jockey-hero-product-image-placeholder-{{ ai_gen_id }}">
                    {{ 'product-1' | placeholder_svg_tag }}
                  </div>
                {% endif %}
              </div>
              <div class="ai-jockey-hero-product-info-{{ ai_gen_id }}">
                <h3 class="ai-jockey-hero-product-name-{{ ai_gen_id }}">{{ product.title }}</h3>
                <p class="ai-jockey-hero-product-details-{{ ai_gen_id }}">
                  {% if product.variants.size > 1 %}
                    {{ product.variants.size }} colors available
                  {% else %}
                    {{ product.price | money }}
                  {% endif %}
                </p>
              </div>
            </div>
          {% endfor %}
        {% else %}
          <div class="ai-jockey-hero-empty-state-{{ ai_gen_id }}">
            <svg xmlns="http://www.w3.org/2000/svg" width="60" height="60" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1" stroke-linecap="round" stroke-linejoin="round">
              <rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect>
              <circle cx="8.5" cy="8.5" r="1.5"></circle>
              <polyline points="21 15 16 10 5 21"></polyline>
            </svg>
            <p>Add men's products to display them here</p>
          </div>
        {% endif %}
      </div>

      <div class="ai-jockey-hero-carousel-{{ ai_gen_id }} ai-jockey-hero-category-{{ ai_gen_id }}" data-category="women">
        {% if block.settings.women_products != blank %}
          {% for product in block.settings.women_products %}
            <div class="ai-jockey-hero-product-card-{{ ai_gen_id }}">
              <div class="ai-jockey-hero-product-image-{{ ai_gen_id }}">
                {% if product.featured_image %}
                  <img
                    src="{{ product.featured_image | image_url: width: 400 }}"
                    alt="{{ product.featured_image.alt | escape }}"
                    loading="lazy"
                    width="400"
                    height="400"
                  >
                {% else %}
                  <div class="ai-jockey-hero-product-image-placeholder-{{ ai_gen_id }}">
                    {{ 'product-1' | placeholder_svg_tag }}
                  </div>
                {% endif %}
              </div>
              <div class="ai-jockey-hero-product-info-{{ ai_gen_id }}">
                <h3 class="ai-jockey-hero-product-name-{{ ai_gen_id }}">{{ product.title }}</h3>
                <p class="ai-jockey-hero-product-details-{{ ai_gen_id }}">
                  {% if product.variants.size > 1 %}
                    {{ product.variants.size }} colors available
                  {% else %}
                    {{ product.price | money }}
                  {% endif %}
                </p>
              </div>
            </div>
          {% endfor %}
        {% else %}
          <div class="ai-jockey-hero-empty-state-{{ ai_gen_id }}">
            <svg xmlns="http://www.w3.org/2000/svg" width="60" height="60" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1" stroke-linecap="round" stroke-linejoin="round">
              <rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect>
              <circle cx="8.5" cy="8.5" r="1.5"></circle>
              <polyline points="21 15 16 10 5 21"></polyline>
            </svg>
            <p>Add women's products to display them here</p>
          </div>
        {% endif %}
      </div>

      <button
        class="ai-jockey-hero-nav-btn-{{ ai_gen_id }} next"
        aria-label="Next products"
      >
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <polyline points="9 18 15 12 9 6"></polyline>
        </svg>
      </button>
    </div>
  </div>
</jockey-hero-{{ ai_gen_id }}>

<script>
  (function() {
    class JockeyHero{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.currentCategory = 'men';
      }

      connectedCallback() {
        this.toggleButtons = this.querySelectorAll('.ai-jockey-hero-toggle-btn-{{ ai_gen_id }}');
        this.categories = this.querySelectorAll('.ai-jockey-hero-category-{{ ai_gen_id }}');
        this.prevButton = this.querySelector('.ai-jockey-hero-nav-btn-{{ ai_gen_id }}.prev');
        this.nextButton = this.querySelector('.ai-jockey-hero-nav-btn-{{ ai_gen_id }}.next');

        this.setupToggle();
        this.setupNavigation();
      }

      setupToggle() {
        this.toggleButtons.forEach(button => {
          button.addEventListener('click', () => {
            const category = button.getAttribute('data-category');
            
            this.toggleButtons.forEach(btn => btn.classList.remove('active'));
            button.classList.add('active');

            this.categories.forEach(cat => {
              if (cat.getAttribute('data-category') === category) {
                cat.classList.add('active');
                this.currentCategory = category;
              } else {
                cat.classList.remove('active');
              }
            });
          });
        });
      }

      setupNavigation() {
        this.prevButton.addEventListener('click', () => {
          const activeCarousel = this.querySelector('.ai-jockey-hero-category-{{ ai_gen_id }}.active');
          if (activeCarousel) {
            activeCarousel.scrollBy({
              left: -300,
              behavior: 'smooth'
            });
          }
        });

        this.nextButton.addEventListener('click', () => {
          const activeCarousel = this.querySelector('.ai-jockey-hero-category-{{ ai_gen_id }}.active');
          if (activeCarousel) {
            activeCarousel.scrollBy({
              left: 300,
              behavior: 'smooth'
            });
          }
        });
      }
    }

    customElements.define('jockey-hero-{{ ai_gen_id }}', JockeyHero{{ ai_gen_id }});
  })();
</script>

