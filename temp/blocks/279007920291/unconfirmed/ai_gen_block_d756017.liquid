{% doc %}
  @prompt
    Create a Men’s Category Page layout featuring a large hero banner at the top with bold typography (like “Cool Coded Casuals”) and product cards below. Product cards should have rounded corners, white backgrounds, shadow effects, and display product images, color swatches, product code, and name. Add toggle tabs at the top for “Men” and “Women” categories with smooth switching animations. Use a modern, premium aesthetic similar to Jockey or H&M, with a warm metallic gradient background.
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-category-page-{{ ai_gen_id }} {
    background: linear-gradient(135deg, #D4AF37 0%, #F4E4C1 50%, #C9A961 100%);
    min-height: 100vh;
    padding: 0;
    margin: 0;
  }

  .ai-category-tabs-{{ ai_gen_id }} {
    display: flex;
    justify-content: center;
    gap: 8px;
    padding: 24px 20px;
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(10px);
  }

  .ai-category-tab-{{ ai_gen_id }} {
    padding: 12px 40px;
    background: transparent;
    border: 2px solid rgba(255, 255, 255, 0.3);
    border-radius: 30px;
    color: {{ block.settings.tab_text_color }};
    font-size: 16px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  .ai-category-tab-{{ ai_gen_id }}:hover {
    background: rgba(255, 255, 255, 0.2);
    border-color: rgba(255, 255, 255, 0.5);
  }

  .ai-category-tab-{{ ai_gen_id }}.active {
    background: {{ block.settings.tab_active_bg }};
    border-color: {{ block.settings.tab_active_bg }};
    color: {{ block.settings.tab_active_text_color }};
  }

  .ai-category-content-{{ ai_gen_id }} {
    opacity: 0;
    transform: translateY(20px);
    transition: opacity 0.5s ease, transform 0.5s ease;
    display: none;
  }

  .ai-category-content-{{ ai_gen_id }}.active {
    opacity: 1;
    transform: translateY(0);
    display: block;
  }

  .ai-hero-banner-{{ ai_gen_id }} {
    position: relative;
    height: {{ block.settings.hero_height }}px;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    margin-bottom: 40px;
  }

  .ai-hero-image-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-hero-placeholder-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, rgba(0, 0, 0, 0.3) 0%, rgba(0, 0, 0, 0.1) 100%);
  }

  .ai-hero-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    object-fit: cover;
    opacity: 0.3;
  }

  .ai-hero-overlay-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, rgba(0, 0, 0, 0.4) 0%, rgba(0, 0, 0, 0.2) 100%);
  }

  .ai-hero-content-{{ ai_gen_id }} {
    position: relative;
    z-index: 2;
    text-align: center;
    padding: 20px;
  }

  .ai-hero-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.hero_title_size }}px;
    font-weight: 800;
    color: {{ block.settings.hero_title_color }};
    margin: 0;
    text-transform: uppercase;
    letter-spacing: 3px;
    text-shadow: 2px 2px 8px rgba(0, 0, 0, 0.3);
    line-height: 1.2;
  }

  .ai-hero-subtitle-{{ ai_gen_id }} {
    font-size: {{ block.settings.hero_subtitle_size }}px;
    color: {{ block.settings.hero_subtitle_color }};
    margin: 16px 0 0;
    font-weight: 400;
    letter-spacing: 1px;
  }

  .ai-products-container-{{ ai_gen_id }} {
    max-width: {{ block.settings.container_width }}px;
    margin: 0 auto;
    padding: 0 20px 60px;
  }

  .ai-products-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: 30px;
  }

  .ai-product-card-{{ ai_gen_id }} {
    background: {{ block.settings.card_bg_color }};
    border-radius: {{ block.settings.card_border_radius }}px;
    overflow: hidden;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
    transition: all 0.3s ease;
    cursor: pointer;
    text-decoration: none;
  }

  .ai-product-card-{{ ai_gen_id }}:hover {
    transform: translateY(-8px);
    box-shadow: 0 12px 30px rgba(0, 0, 0, 0.15);
  }

  .ai-product-image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    padding-top: 125%;
    overflow: hidden;
    background: #f8f8f8;
  }

  .ai-product-image-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .ai-product-card-{{ ai_gen_id }}:hover .ai-product-image-{{ ai_gen_id }} {
    transform: scale(1.05);
  }

  .ai-product-placeholder-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: #f0f0f0;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-product-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  .ai-product-info-{{ ai_gen_id }} {
    padding: 20px;
  }

  .ai-product-code-{{ ai_gen_id }} {
    font-size: 12px;
    color: {{ block.settings.product_code_color }};
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 1px;
    margin-bottom: 8px;
  }

  .ai-product-name-{{ ai_gen_id }} {
    font-size: 16px;
    color: {{ block.settings.product_name_color }};
    font-weight: 600;
    margin: 0 0 12px;
    line-height: 1.4;
  }

  .ai-color-swatches-{{ ai_gen_id }} {
    display: flex;
    gap: 8px;
    flex-wrap: wrap;
  }

  .ai-color-swatch-{{ ai_gen_id }} {
    width: 24px;
    height: 24px;
    border-radius: 50%;
    border: 2px solid #e0e0e0;
    cursor: pointer;
    transition: all 0.2s ease;
  }

  .ai-color-swatch-{{ ai_gen_id }}:hover {
    transform: scale(1.15);
    border-color: #333;
  }

  .ai-empty-state-{{ ai_gen_id }} {
    text-align: center;
    padding: 60px 20px;
    color: {{ block.settings.hero_subtitle_color }};
  }

  .ai-empty-state-{{ ai_gen_id }} h3 {
    font-size: 24px;
    margin-bottom: 12px;
    color: {{ block.settings.hero_title_color }};
  }

  @media screen and (max-width: 768px) {
    .ai-hero-banner-{{ ai_gen_id }} {
      height: {{ block.settings.hero_height | times: 0.6 }}px;
    }

    .ai-hero-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.hero_title_size | times: 0.5 }}px;
      letter-spacing: 2px;
    }

    .ai-hero-subtitle-{{ ai_gen_id }} {
      font-size: {{ block.settings.hero_subtitle_size | times: 0.7 }}px;
    }

    .ai-products-grid-{{ ai_gen_id }} {
      grid-template-columns: repeat(auto-fill, minmax(160px, 1fr));
      gap: 16px;
    }

    .ai-category-tab-{{ ai_gen_id }} {
      padding: 10px 24px;
      font-size: 14px;
    }
  }
{% endstyle %}

<category-page-{{ ai_gen_id }} class="ai-category-page-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-category-tabs-{{ ai_gen_id }}">
    <button class="ai-category-tab-{{ ai_gen_id }} active" data-category="men">
      {{ block.settings.men_tab_label }}
    </button>
    <button class="ai-category-tab-{{ ai_gen_id }}" data-category="women">
      {{ block.settings.women_tab_label }}
    </button>
  </div>

  <div class="ai-category-content-{{ ai_gen_id }} active" data-content="men">
    <div class="ai-hero-banner-{{ ai_gen_id }}">
      {% if block.settings.men_hero_image %}
        <img
          src="{{ block.settings.men_hero_image | image_url: width: 2000 }}"
          alt="{{ block.settings.men_hero_image.alt | escape }}"
          class="ai-hero-image-{{ ai_gen_id }}"
          loading="lazy"
          width="{{ block.settings.men_hero_image.width }}"
          height="{{ block.settings.men_hero_image.height }}"
        >
      {% else %}
        <div class="ai-hero-placeholder-{{ ai_gen_id }}">
          {{ 'hero-apparel-1' | placeholder_svg_tag }}
        </div>
      {% endif %}
      <div class="ai-hero-overlay-{{ ai_gen_id }}"></div>
      <div class="ai-hero-content-{{ ai_gen_id }}">
        <h1 class="ai-hero-title-{{ ai_gen_id }}">{{ block.settings.men_hero_title }}</h1>
        {% if block.settings.men_hero_subtitle != blank %}
          <p class="ai-hero-subtitle-{{ ai_gen_id }}">{{ block.settings.men_hero_subtitle }}</p>
        {% endif %}
      </div>
    </div>

    <div class="ai-products-container-{{ ai_gen_id }}">
      {% if block.settings.men_collection != blank %}
        <div class="ai-products-grid-{{ ai_gen_id }}">
          {% for product in block.settings.men_collection.products limit: block.settings.products_limit %}
            <a href="{{ product.url }}" class="ai-product-card-{{ ai_gen_id }}">
              <div class="ai-product-image-wrapper-{{ ai_gen_id }}">
                {% if product.featured_image %}
                  <img
                    src="{{ product.featured_image | image_url: width: 600 }}"
                    alt="{{ product.featured_image.alt | escape }}"
                    class="ai-product-image-{{ ai_gen_id }}"
                    loading="lazy"
                    width="600"
                    height="750"
                  >
                {% else %}
                  <div class="ai-product-placeholder-{{ ai_gen_id }}">
                    {{ 'product-apparel-1' | placeholder_svg_tag }}
                  </div>
                {% endif %}
              </div>
              <div class="ai-product-info-{{ ai_gen_id }}">
                {% if product.metafields.custom.product_code != blank %}
                  <div class="ai-product-code-{{ ai_gen_id }}">{{ product.metafields.custom.product_code }}</div>
                {% elsif product.variants.first.sku != blank %}
                  <div class="ai-product-code-{{ ai_gen_id }}">{{ product.variants.first.sku }}</div>
                {% endif %}
                <h3 class="ai-product-name-{{ ai_gen_id }}">{{ product.title }}</h3>
                {% if product.options_with_values.size > 0 %}
                  {% for option in product.options_with_values %}
                    {% if option.name == 'Color' or option.name == 'Colour' %}
                      <div class="ai-color-swatches-{{ ai_gen_id }}">
                        {% for value in option.values limit: 5 %}
                          {% assign color_value = value | downcase | replace: ' ', '-' %}
                          <div
                            class="ai-color-swatch-{{ ai_gen_id }}"
                            style="background-color: {{ color_value }};"
                            title="{{ value }}"
                          ></div>
                        {% endfor %}
                      </div>
                    {% endif %}
                  {% endfor %}
                {% endif %}
              </div>
            </a>
          {% endfor %}
        </div>
      {% else %}
        <div class="ai-empty-state-{{ ai_gen_id }}">
          <h3>No products yet</h3>
          <p>Select a collection for the Men's category to display products</p>
        </div>
      {% endif %}
    </div>
  </div>

  <div class="ai-category-content-{{ ai_gen_id }}" data-content="women">
    <div class="ai-hero-banner-{{ ai_gen_id }}">
      {% if block.settings.women_hero_image %}
        <img
          src="{{ block.settings.women_hero_image | image_url: width: 2000 }}"
          alt="{{ block.settings.women_hero_image.alt | escape }}"
          class="ai-hero-image-{{ ai_gen_id }}"
          loading="lazy"
          width="{{ block.settings.women_hero_image.width }}"
          height="{{ block.settings.women_hero_image.height }}"
        >
      {% else %}
        <div class="ai-hero-placeholder-{{ ai_gen_id }}">
          {{ 'hero-apparel-1' | placeholder_svg_tag }}
        </div>
      {% endif %}
      <div class="ai-hero-overlay-{{ ai_gen_id }}"></div>
      <div class="ai-hero-content-{{ ai_gen_id }}">
        <h1 class="ai-hero-title-{{ ai_gen_id }}">{{ block.settings.women_hero_title }}</h1>
        {% if block.settings.women_hero_subtitle != blank %}
          <p class="ai-hero-subtitle-{{ ai_gen_id }}">{{ block.settings.women_hero_subtitle }}</p>
        {% endif %}
      </div>
    </div>

    <div class="ai-products-container-{{ ai_gen_id }}">
      {% if block.settings.women_collection != blank %}
        <div class="ai-products-grid-{{ ai_gen_id }}">
          {% for product in block.settings.women_collection.products limit: block.settings.products_limit %}
            <a href="{{ product.url }}" class="ai-product-card-{{ ai_gen_id }}">
              <div class="ai-product-image-wrapper-{{ ai_gen_id }}">
                {% if product.featured_image %}
                  <img
                    src="{{ product.featured_image | image_url: width: 600 }}"
                    alt="{{ product.featured_image.alt | escape }}"
                    class="ai-product-image-{{ ai_gen_id }}"
                    loading="lazy"
                    width="600"
                    height="750"
                  >
                {% else %}
                  <div class="ai-product-placeholder-{{ ai_gen_id }}">
                    {{ 'product-apparel-1' | placeholder_svg_tag }}
                  </div>
                {% endif %}
              </div>
              <div class="ai-product-info-{{ ai_gen_id }}">
                {% if product.metafields.custom.product_code != blank %}
                  <div class="ai-product-code-{{ ai_gen_id }}">{{ product.metafields.custom.product_code }}</div>
                {% elsif product.variants.first.sku != blank %}
                  <div class="ai-product-code-{{ ai_gen_id }}">{{ product.variants.first.sku }}</div>
                {% endif %}
                <h3 class="ai-product-name-{{ ai_gen_id }}">{{ product.title }}</h3>
                {% if product.options_with_values.size > 0 %}
                  {% for option in product.options_with_values %}
                    {% if option.name == 'Color' or option.name == 'Colour' %}
                      <div class="ai-color-swatches-{{ ai_gen_id }}">
                        {% for value in option.values limit: 5 %}
                          {% assign color_value = value | downcase | replace: ' ', '-' %}
                          <div
                            class="ai-color-swatch-{{ ai_gen_id }}"
                            style="background-color: {{ color_value }};"
                            title="{{ value }}"
                          ></div>
                        {% endfor %}
                      </div>
                    {% endif %}
                  {% endfor %}
                {% endif %}
              </div>
            </a>
          {% endfor %}
        </div>
      {% else %}
        <div class="ai-empty-state-{{ ai_gen_id }}">
          <h3>No products yet</h3>
          <p>Select a collection for the Women's category to display products</p>
        </div>
      {% endif %}
    </div>
  </div>
</category-page-{{ ai_gen_id }}>

<script>
  (function() {
    class CategoryPage{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.tabs = this.querySelectorAll('.ai-category-tab-{{ ai_gen_id }}');
        this.contents = this.querySelectorAll('.ai-category-content-{{ ai_gen_id }}');
        this.setupEventListeners();
      }

      setupEventListeners() {
        this.tabs.forEach((tab) => {
          tab.addEventListener('click', () => {
            const category = tab.getAttribute('data-category');
            this.switchCategory(category);
          });
        });
      }

      switchCategory(category) {
        this.tabs.forEach((tab) => {
          if (tab.getAttribute('data-category') === category) {
            tab.classList.add('active');
          } else {
            tab.classList.remove('active');
          }
        });

        this.contents.forEach((content) => {
          if (content.getAttribute('data-content') === category) {
            content.classList.add('active');
          } else {
            content.classList.remove('active');
          }
        });
      }
    }

    customElements.define('category-page-{{ ai_gen_id }}', CategoryPage{{ ai_gen_id }});
  })();
</script>

