{% doc %}
  @prompt
    Create a full-width hero banner section with a dark luxury background, bold serif typography that says “Autumn Winter Collection,” a male model image on one side, and a “Shop All” call-to-action button. The design should feel premium, elegant, and modern.
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-hero-banner-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    min-height: {{ block.settings.section_height }}px;
    background-color: {{ block.settings.background_color }};
    overflow: hidden;
  }

  .ai-hero-banner-container-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    justify-content: space-between;
    max-width: 100%;
    height: 100%;
    min-height: {{ block.settings.section_height }}px;
    padding: 0;
    margin: 0 auto;
    position: relative;
  }

  .ai-hero-banner-content-{{ ai_gen_id }} {
    flex: 1;
    padding: 60px 80px;
    z-index: 2;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: {{ block.settings.text_alignment }};
    text-align: {{ block.settings.text_alignment }};
  }

  .ai-hero-banner-heading-{{ ai_gen_id }} {
    font-family: {{ block.settings.heading_font.family }}, {{ block.settings.heading_font.fallback_families }};
    font-weight: {{ block.settings.heading_font.weight }};
    font-style: {{ block.settings.heading_font.style }};
    font-size: {{ block.settings.heading_size }}px;
    line-height: 1.1;
    color: {{ block.settings.heading_color }};
    margin: 0 0 {{ block.settings.spacing }}px 0;
    letter-spacing: {{ block.settings.letter_spacing }}px;
    text-transform: {{ block.settings.text_transform }};
  }

  .ai-hero-banner-subheading-{{ ai_gen_id }} {
    font-size: {{ block.settings.subheading_size }}px;
    color: {{ block.settings.subheading_color }};
    margin: 0 0 {{ block.settings.spacing }}px 0;
    line-height: 1.5;
    max-width: 500px;
  }

  .ai-hero-banner-button-{{ ai_gen_id }} {
    display: inline-block;
    padding: {{ block.settings.button_padding_vertical }}px {{ block.settings.button_padding_horizontal }}px;
    background-color: {{ block.settings.button_bg_color }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    font-size: {{ block.settings.button_font_size }}px;
    font-weight: 600;
    border: {{ block.settings.button_border_width }}px solid {{ block.settings.button_border_color }};
    border-radius: {{ block.settings.button_border_radius }}px;
    cursor: pointer;
    transition: all 0.3s ease;
    letter-spacing: 1px;
    text-transform: uppercase;
  }

  .ai-hero-banner-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_bg_color }};
    color: {{ block.settings.button_hover_text_color }};
    border-color: {{ block.settings.button_hover_border_color }};
  }

  .ai-hero-banner-image-wrapper-{{ ai_gen_id }} {
    flex: 1;
    height: {{ block.settings.section_height }}px;
    position: relative;
    overflow: hidden;
  }

  .ai-hero-banner-image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: {{ block.settings.image_position }};
  }

  .ai-hero-banner-image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #2a2a2a;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .ai-hero-banner-image-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 400px;
    max-height: 400px;
    opacity: 0.3;
  }

  .ai-hero-banner-empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 30px;
    left: 50%;
    transform: translateX(-50%);
    padding: 12px 24px;
    background-color: rgba(255, 255, 255, 0.1);
    color: rgba(255, 255, 255, 0.7);
    font-size: 14px;
    border-radius: 4px;
    pointer-events: none;
  }

  @media screen and (max-width: 989px) {
    .ai-hero-banner-container-{{ ai_gen_id }} {
      flex-direction: column-reverse;
      min-height: auto;
    }

    .ai-hero-banner-content-{{ ai_gen_id }} {
      padding: 40px 30px;
      align-items: center;
      text-align: center;
    }

    .ai-hero-banner-heading-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.heading_size }}px * 0.6);
    }

    .ai-hero-banner-subheading-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.subheading_size }}px * 0.9);
    }

    .ai-hero-banner-image-wrapper-{{ ai_gen_id }} {
      height: 400px;
      width: 100%;
    }
  }

  @media screen and (max-width: 749px) {
    .ai-hero-banner-heading-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.heading_size }}px * 0.5);
    }

    .ai-hero-banner-content-{{ ai_gen_id }} {
      padding: 30px 20px;
    }

    .ai-hero-banner-image-wrapper-{{ ai_gen_id }} {
      height: 300px;
    }
  }
{% endstyle %}

<div class="ai-hero-banner-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-hero-banner-container-{{ ai_gen_id }}">
    <div class="ai-hero-banner-content-{{ ai_gen_id }}">
      {% if block.settings.heading != blank %}
        <h1 class="ai-hero-banner-heading-{{ ai_gen_id }}">
          {{ block.settings.heading }}
        </h1>
      {% endif %}

      {% if block.settings.subheading != blank %}
        <p class="ai-hero-banner-subheading-{{ ai_gen_id }}">
          {{ block.settings.subheading }}
        </p>
      {% endif %}

      {% if block.settings.button_text != blank %}
        <a
          href="{{ block.settings.button_link }}"
          class="ai-hero-banner-button-{{ ai_gen_id }}"
        >
          {{ block.settings.button_text }}
        </a>
      {% endif %}
    </div>

    <div class="ai-hero-banner-image-wrapper-{{ ai_gen_id }}">
      {% if block.settings.image %}
        <img
          src="{{ block.settings.image | image_url: width: 1500 }}"
          alt="{{ block.settings.image.alt | escape }}"
          loading="lazy"
          width="{{ block.settings.image.width }}"
          height="{{ block.settings.image.height }}"
          class="ai-hero-banner-image-{{ ai_gen_id }}"
        >
      {% else %}
        <div class="ai-hero-banner-image-placeholder-{{ ai_gen_id }}">
          {{ 'hero-apparel-1' | placeholder_svg_tag }}
          <div class="ai-hero-banner-empty-state-{{ ai_gen_id }}">
            Add a model image
          </div>
        </div>
      {% endif %}
    </div>
  </div>
</div>

