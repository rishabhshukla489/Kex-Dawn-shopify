<on-trend-picks-{{ ai_gen_id }} class="ai-trend-picks-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-trend-picks-container-{{ ai_gen_id }}">
    <div class="ai-trend-picks-header-{{ ai_gen_id }}">
      <h2 class="ai-trend-picks-title-{{ ai_gen_id }}">{{ block.settings.section_title }}</h2>
      <p class="ai-trend-picks-subtitle-{{ ai_gen_id }}">{{ block.settings.section_subtitle }}</p>
    </div>

    <div class="ai-trend-picks-slider-wrapper-{{ ai_gen_id }}">
      <button
        class="ai-trend-picks-arrow-{{ ai_gen_id }} ai-trend-picks-arrow-left-{{ ai_gen_id }}"
        aria-label="Previous slide"
        data-direction="prev"
      >
        <svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M15 18L9 12L15 6" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
      </button>

      <div class="ai-trend-picks-slider-{{ ai_gen_id }}">
        <div class="ai-trend-picks-track-{{ ai_gen_id }}">
          {% for i in (1..7) %}
            {% liquid
              assign card_enabled_key = 'card_' | append: i | append: '_enabled'
              assign card_image_key = 'card_' | append: i | append: '_image'
              assign card_bg_key = 'card_' | append: i | append: '_bg_color'
              assign card_heading_key = 'card_' | append: i | append: '_heading'
              assign card_tagline_key = 'card_' | append: i | append: '_tagline'
              assign card_button_text_key = 'card_' | append: i | append: '_button_text'
              assign card_link_key = 'card_' | append: i | append: '_link'

              assign card_enabled = block.settings[card_enabled_key]
              assign card_image = block.settings[card_image_key]
              assign card_bg = block.settings[card_bg_key]
              assign card_heading = block.settings[card_heading_key]
              assign card_tagline = block.settings[card_tagline_key]
              assign card_button_text = block.settings[card_button_text_key]
              assign card_link = block.settings[card_link_key]
            %}

            {% if card_enabled %}
              <div class="ai-trend-picks-card-{{ ai_gen_id }}" style="background-color: {{ card_bg }};">
                <div class="ai-trend-picks-card-image-wrapper-{{ ai_gen_id }}">
                  {% if card_image %}
                    <img
                      src="{{ card_image | image_url: width: 600 }}"
                      alt="{{ card_image.alt | escape }}"
                      class="ai-trend-picks-card-image-{{ ai_gen_id }}"
                      loading="lazy"
                      width="600"
                      height="{{ block.settings.card_image_height }}"
                    >
                  {% else %}
                    <div class="ai-trend-picks-card-image-placeholder-{{ ai_gen_id }}">
                      {{ 'product-1' | placeholder_svg_tag }}
                    </div>
                  {% endif %}
                </div>

                <div class="ai-trend-picks-card-content-{{ ai_gen_id }}">
                  {% if card_heading != blank %}
                    <h3 class="ai-trend-picks-card-heading-{{ ai_gen_id }}">{{ card_heading }}</h3>
                  {% endif %}

                  {% if card_tagline != blank %}
                    <p class="ai-trend-picks-card-tagline-{{ ai_gen_id }}">{{ card_tagline }}</p>
                  {% endif %}

                  {% if card_link != blank and card_button_text != blank %}
                    <a href="{{ card_link }}" class="ai-trend-picks-card-button-{{ ai_gen_id }}">
                      {{ card_button_text }}
                    </a>
                  {% endif %}
                </div>
              </div>
            {% endif %}
          {% endfor %}
        </div>
      </div>

      <button
        class="ai-trend-picks-arrow-{{ ai_gen_id }} ai-trend-picks-arrow-right-{{ ai_gen_id }}"
        aria-label="Next slide"
        data-direction="next"
      >
        <svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M9 18L15 12L9 6" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
      </button>
    </div>
  </div>
</on-trend-picks-{{ ai_gen_id }}>

<script>
  (function() {
    class OnTrendPicks{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.currentIndex = 0;
        this.autoScrollInterval = null;
        this.isAutoScrollEnabled = {{ block.settings.enable_auto_scroll | json }};
        this.autoScrollDelay = {{ block.settings.auto_scroll_delay }} * 1000;
      }

      connectedCallback() {
        this.slider = this.querySelector('.ai-trend-picks-slider-{{ ai_gen_id }}');
        this.track = this.querySelector('.ai-trend-picks-track-{{ ai_gen_id }}');
        this.cards = this.querySelectorAll('.ai-trend-picks-card-{{ ai_gen_id }}');
        this.prevButton = this.querySelector('.ai-trend-picks-arrow-left-{{ ai_gen_id }}');
        this.nextButton = this.querySelector('.ai-trend-picks-arrow-right-{{ ai_gen_id }}');

        if (this.cards.length === 0) return;

        this.setupEventListeners();
        this.updateSlider();

        if (this.isAutoScrollEnabled) {
          this.startAutoScroll();
        }
      }

      setupEventListeners() {
        this.prevButton.addEventListener('click', () => this.navigate('prev'));
        this.nextButton.addEventListener('click', () => this.navigate('next'));

        this.slider.addEventListener('mouseenter', () => this.stopAutoScroll());
        this.slider.addEventListener('mouseleave', () => {
          if (this.isAutoScrollEnabled) {
            this.startAutoScroll();
          }
        });

        window.addEventListener('resize', () => this.updateSlider());
      }

      navigate(direction) {
        const visibleCards = this.getVisibleCardsCount();
        const maxIndex = Math.max(0, this.cards.length - visibleCards);

        if (direction === 'next') {
          this.currentIndex = Math.min(this.currentIndex + 1, maxIndex);
        } else {
          this.currentIndex = Math.max(this.currentIndex - 1, 0);
        }

        this.updateSlider();
        this.resetAutoScroll();
      }

      getVisibleCardsCount() {
        const sliderWidth = this.slider.offsetWidth;
        const cardWidth = {{ block.settings.card_width }};
        const gap = {{ block.settings.card_gap }};

        if (window.innerWidth <= 749) {
          return Math.floor(sliderWidth / (240 + gap));
        } else if (window.innerWidth <= 989) {
          return Math.floor(sliderWidth / (280 + gap));
        } else {
          return Math.floor(sliderWidth / (cardWidth + gap));
        }
      }

      updateSlider() {
        const cardWidth = this.cards[0].offsetWidth;
        const gap = {{ block.settings.card_gap }};
        const offset = this.currentIndex * (cardWidth + gap);

        this.track.style.transform = `translateX(-${offset}px)`;

        const visibleCards = this.getVisibleCardsCount();
        const maxIndex = Math.max(0, this.cards.length - visibleCards);

        this.prevButton.disabled = this.currentIndex === 0;
        this.nextButton.disabled = this.currentIndex >= maxIndex;
      }

      startAutoScroll() {
        this.stopAutoScroll();
        this.autoScrollInterval = setInterval(() => {
          const visibleCards = this.getVisibleCardsCount();
          const maxIndex = Math.max(0, this.cards.length - visibleCards);

          if (this.currentIndex >= maxIndex) {
            this.currentIndex = 0;
          } else {
            this.currentIndex++;
          }

          this.updateSlider();
        }, this.autoScrollDelay);
      }

      stopAutoScroll() {
        if (this.autoScrollInterval) {
          clearInterval(this.autoScrollInterval);
          this.autoScrollInterval = null;
        }
      }

      resetAutoScroll() {
        if (this.isAutoScrollEnabled) {
          this.stopAutoScroll();
          this.startAutoScroll();
        }
      }

      disconnectedCallback() {
        this.stopAutoScroll();
      }
    }

    customElements.define('on-trend-picks-{{ ai_gen_id }}', OnTrendPicks{{ ai_gen_id }});
  })();
</script>

