<script>
  (function() {
    class FeaturedCategories{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.currentSlide = 0;
        this.currentTab = 'tab1';
        this.autoplayInterval = null;
      }

      connectedCallback() {
        this.track = this.querySelector('.ai-featured-categories-track-{{ ai_gen_id }}');
        this.cards = Array.from(this.querySelectorAll('.ai-featured-categories-card-{{ ai_gen_id }}'));
        this.dotsContainer = this.querySelector('.ai-featured-categories-dots-{{ ai_gen_id }}');
        this.prevButton = this.querySelector('.ai-featured-categories-prev-{{ ai_gen_id }}');
        this.nextButton = this.querySelector('.ai-featured-categories-next-{{ ai_gen_id }}');
        this.tabs = Array.from(this.querySelectorAll('.ai-featured-categories-tab-{{ ai_gen_id }}'));

        this.filterCards();
        this.createDots();
        this.setupEventListeners();
        this.updateSlider();

        {% if block.settings.enable_autoplay %}
          this.startAutoplay();
        {% endif %}
      }

      filterCards() {
        this.visibleCards = this.cards.filter(card => {
          const tabFilter = card.dataset.tabFilter;
          return tabFilter === 'both' || tabFilter === this.currentTab;
        });

        this.cards.forEach(card => {
          const tabFilter = card.dataset.tabFilter;
          if (tabFilter === 'both' || tabFilter === this.currentTab) {
            card.style.display = 'flex';
          } else {
            card.style.display = 'none';
          }
        });

        if (this.currentSlide >= this.visibleCards.length) {
          this.currentSlide = 0;
        }
      }

      createDots() {
        if (!this.dotsContainer) return;
        this.dotsContainer.innerHTML = '';

        this.visibleCards.forEach((card, index) => {
          const dot = document.createElement('button');
          dot.className = 'ai-featured-categories-dot-{{ ai_gen_id }}';
          dot.setAttribute('aria-label', `Go to slide ${index + 1}`);
          if (index === this.currentSlide) {
            dot.classList.add('active');
          }
          dot.addEventListener('click', () => this.goToSlide(index));
          this.dotsContainer.appendChild(dot);
        });
      }

      setupEventListeners() {
        if (this.prevButton) {
          this.prevButton.addEventListener('click', () => this.prevSlide());
        }

        if (this.nextButton) {
          this.nextButton.addEventListener('click', () => this.nextSlide());
        }

        this.tabs.forEach(tab => {
          tab.addEventListener('click', () => {
            this.tabs.forEach(t => t.classList.remove('active'));
            tab.classList.add('active');
            this.currentTab = tab.dataset.tab;
            this.currentSlide = 0;
            this.filterCards();
            this.createDots();
            this.updateSlider();
          });
        });

        let startX = 0;
        let currentX = 0;
        let isDragging = false;

        this.track.addEventListener('touchstart', (e) => {
          startX = e.touches[0].clientX;
          isDragging = true;
        });

        this.track.addEventListener('touchmove', (e) => {
          if (!isDragging) return;
          currentX = e.touches[0].clientX;
        });

        this.track.addEventListener('touchend', () => {
          if (!isDragging) return;
          const diff = startX - currentX;
          if (Math.abs(diff) > 50) {
            if (diff > 0) {
              this.nextSlide();
            } else {
              this.prevSlide();
            }
          }
          isDragging = false;
        });
      }

      updateSlider() {
        if (!this.track || this.visibleCards.length === 0) return;

        const cardWidth = this.visibleCards[0].offsetWidth;
        const gap = {{ block.settings.card_gap }};
        const offset = -(this.currentSlide * (cardWidth + gap));

        this.track.style.transform = `translateX(${offset}px)`;

        const dots = this.querySelectorAll('.ai-featured-categories-dot-{{ ai_gen_id }}');
        dots.forEach((dot, index) => {
          if (index === this.currentSlide) {
            dot.classList.add('active');
          } else {
            dot.classList.remove('active');
          }
        });
      }

      goToSlide(index) {
        this.currentSlide = index;
        this.updateSlider();
        this.resetAutoplay();
      }

      nextSlide() {
        this.currentSlide = (this.currentSlide + 1) % this.visibleCards.length;
        this.updateSlider();
        this.resetAutoplay();
      }

      prevSlide() {
        this.currentSlide = (this.currentSlide - 1 + this.visibleCards.length) % this.visibleCards.length;
        this.updateSlider();
        this.resetAutoplay();
      }

      startAutoplay() {
        this.autoplayInterval = setInterval(() => {
          this.nextSlide();
        }, {{ block.settings.autoplay_speed }} * 1000);
      }

      resetAutoplay() {
        {% if block.settings.enable_autoplay %}
          if (this.autoplayInterval) {
            clearInterval(this.autoplayInterval);
            this.startAutoplay();
          }
        {% endif %}
      }

      disconnectedCallback() {
        if (this.autoplayInterval) {
          clearInterval(this.autoplayInterval);
        }
      }
    }

    customElements.define('featured-categories-{{ ai_gen_id }}', FeaturedCategories{{ ai_gen_id }});
  })();
</script>

